<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>Github Pharmacy</display-name>

    <!-- LoginServlet (No Annotation) -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>core_app.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- LogoutServlet (Assuming No Annotation) -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>core_app.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- SessionAuthServlet (No Annotation) -->
    <servlet>
        <servlet-name>SessionAuthServlet</servlet-name>
        <servlet-class>core_app.servlet.SessionAuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionAuthServlet</servlet-name>
        <url-pattern>/api/auth-status</url-pattern>
    </servlet-mapping>

    <!-- RegisterServlet has @WebServlet("/register") - REMOVED from XML to avoid duplicate error -->
    <!-- UserManagementServlet has @WebServlet("/admin/users") - REMOVED from XML to avoid duplicate error -->

    <!-- Filters -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>core_app.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>home.html</welcome-file>
    </welcome-file-list>

</web-app>
